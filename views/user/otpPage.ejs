<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Blush-Berry | OTP Verification</title>
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=DM+Sans:wght@400;500;600&display=swap" rel="stylesheet"/>
</head>
<body style="margin:0;padding:0;min-height:100vh;background:#e1e2e8;display:flex;align-items:center;justify-content:center;font-family:'DM Sans',sans-serif;">

  <div style="width:720px;max-width:95vw;background:#fff;border-radius:20px;overflow:hidden;display:flex;flex-direction:column;box-shadow:0 30px 80px rgba(0,0,0,0.4);">

    <!-- Brand Header -->
    <div style="text-align:center;padding:28px 0 10px;background:#fff;">
      <span style="font-family:'Dancing Script',cursive;font-size:2.6rem;color:#1a2035;letter-spacing:1px;">Blush-Berry</span>
    </div>

    <!-- Card Body -->
    <div style="display:flex;flex-direction:row;min-height:320px;">

      <!-- Left: Image Panel -->
      <div style="flex:0 0 45%;background:linear-gradient(135deg,#f9c5d1 0%,#f48fb1 100%);display:flex;align-items:center;justify-content:center;overflow:hidden;min-height:320px;">
        <div style="width:100%;height:100%;background:url('https://images.unsplash.com/photo-1596704017248-c6d88fb09450?w=500&q=80') center/cover no-repeat;min-height:320px;"></div>
      </div>

      <!-- Right: OTP Panel -->
      <div style="flex:1;background:#fce4ec;display:flex;flex-direction:column;align-items:center;justify-content:center;padding:40px 36px;">

        <h2 style="margin:0 0 8px;font-size:1.35rem;font-weight:700;color:#1a1a2e;letter-spacing:0.3px;">OTP Verification</h2>
        <p style="margin:0 0 4px;font-size:0.78rem;color:#777;text-align:center;">Enter OTP sent to bill*****s@example.com</p>

        <!-- Timer -->
        <div style="margin:8px 0 24px;font-size:0.82rem;color:#555;font-weight:500;" id="timer">1:42</div>

        <!-- OTP Inputs -->
        <div style="display:flex;gap:12px;margin-bottom:28px;">
          <input id="otp1" maxlength="1" oninput="moveNext(this,'otp2')" onkeydown="movePrev(event,this,null,'otp1')"
            style="width:52px;height:52px;border:none;border-radius:10px;background:#fff;text-align:center;font-size:1.4rem;font-weight:700;color:#1a1a2e;outline:none;box-shadow:0 2px 8px rgba(0,0,0,0.08);caret-color:#f06292;transition:box-shadow 0.2s;"
            onfocus="this.style.boxShadow='0 0 0 2.5px #f06292'" onblur="this.style.boxShadow='0 2px 8px rgba(0,0,0,0.08)'" />
          <input id="otp2" maxlength="1" oninput="moveNext(this,'otp3')" onkeydown="movePrev(event,this,'otp1','otp2')"
            style="width:52px;height:52px;border:none;border-radius:10px;background:#fff;text-align:center;font-size:1.4rem;font-weight:700;color:#1a1a2e;outline:none;box-shadow:0 2px 8px rgba(0,0,0,0.08);caret-color:#f06292;transition:box-shadow 0.2s;"
            onfocus="this.style.boxShadow='0 0 0 2.5px #f06292'" onblur="this.style.boxShadow='0 2px 8px rgba(0,0,0,0.08)'" />
          <input id="otp3" maxlength="1" oninput="moveNext(this,'otp4')" onkeydown="movePrev(event,this,'otp2','otp3')"
            style="width:52px;height:52px;border:none;border-radius:10px;background:#fff;text-align:center;font-size:1.4rem;font-weight:700;color:#1a1a2e;outline:none;box-shadow:0 2px 8px rgba(0,0,0,0.08);caret-color:#f06292;transition:box-shadow 0.2s;"
            onfocus="this.style.boxShadow='0 0 0 2.5px #f06292'" onblur="this.style.boxShadow='0 2px 8px rgba(0,0,0,0.08)'" />
          <input id="otp4" maxlength="1" oninput="moveNext(this,null)" onkeydown="movePrev(event,this,'otp3','otp4')"
            style="width:52px;height:52px;border:none;border-radius:10px;background:#fff;text-align:center;font-size:1.4rem;font-weight:700;color:#1a1a2e;outline:none;box-shadow:0 2px 8px rgba(0,0,0,0.08);caret-color:#f06292;transition:box-shadow 0.2s;"
            onfocus="this.style.boxShadow='0 0 0 2.5px #f06292'" onblur="this.style.boxShadow='0 2px 8px rgba(0,0,0,0.08)'" />
        </div>

        <!-- Confirm Button -->
        <button onclick="confirmOTP()"
          style="width:100%;padding:14px 0;background:linear-gradient(90deg,#f06292,#e91e8c);border:none;border-radius:30px;color:#fff;font-size:0.95rem;font-weight:600;letter-spacing:0.5px;cursor:pointer;box-shadow:0 6px 20px rgba(233,30,140,0.35);transition:transform 0.15s,box-shadow 0.15s;"
          onmouseover="this.style.transform='translateY(-2px)';this.style.boxShadow='0 10px 28px rgba(233,30,140,0.45)'"
          onmouseout="this.style.transform='translateY(0)';this.style.boxShadow='0 6px 20px rgba(233,30,140,0.35)'">
          Confirm
        </button>

        <!-- Resend -->
        <button id="resendBtn" onclick="resendOTP()" disabled
          style="margin-top:14px;background:none;border:none;font-size:0.8rem;color:#bbb;cursor:not-allowed;font-family:'DM Sans',sans-serif;transition:color 0.2s;">
          Resend OTP
        </button>

      </div>
    </div>
  </div>

  <!-- Success Toast -->
  <div id="toast" style="position:fixed;bottom:32px;left:50%;transform:translateX(-50%) translateY(80px);background:#1a2035;color:#fff;padding:14px 28px;border-radius:50px;font-size:0.88rem;font-weight:500;opacity:0;transition:all 0.4s;pointer-events:none;box-shadow:0 8px 30px rgba(0,0,0,0.3);border-left:4px solid #f06292;">
    âœ“ OTP Verified Successfully!
  </div>

  <script>
    // Countdown Timer
    let seconds = 102;
    const timerEl = document.getElementById('timer');
    const resendBtn = document.getElementById('resendBtn');

    const countdown = setInterval(() => {
      seconds--;
      const m = Math.floor(seconds / 60);
      const s = seconds % 60;
      timerEl.textContent = `${m}:${s.toString().padStart(2,'0')}`;
      if (seconds <= 0) {
        clearInterval(countdown);
        timerEl.textContent = '0:00';
        timerEl.style.color = '#e91e8c';
        resendBtn.disabled = false;
        resendBtn.style.color = '#e91e8c';
        resendBtn.style.cursor = 'pointer';
        resendBtn.style.fontWeight = '600';
      }
    }, 1000);

    function moveNext(current, nextId) {
      if (current.value && nextId) {
        document.getElementById(nextId).focus();
      }
    }

    function movePrev(e, current, prevId, currentId) {
      if (e.key === 'Backspace' && !current.value && prevId) {
        document.getElementById(prevId).focus();
      }
    }

    function confirmOTP() {
      const otp = ['otp1','otp2','otp3','otp4'].map(id => document.getElementById(id).value).join('');
      if (otp.length < 4) {
        ['otp1','otp2','otp3','otp4'].forEach(id => {
          const el = document.getElementById(id);
          el.style.boxShadow = '0 0 0 2.5px #ff5252';
          setTimeout(() => el.style.boxShadow = '0 2px 8px rgba(0,0,0,0.08)', 800);
        });
        return;
      }
      const toast = document.getElementById('toast');
      toast.style.opacity = '1';
      toast.style.transform = 'translateX(-50%) translateY(0)';
      setTimeout(() => {
        toast.style.opacity = '0';
        toast.style.transform = 'translateX(-50%) translateY(80px)';
      }, 2800);
    }

    function resendOTP() {
      ['otp1','otp2','otp3','otp4'].forEach(id => document.getElementById(id).value = '');
      document.getElementById('otp1').focus();
      seconds = 102;
      timerEl.style.color = '#555';
      resendBtn.disabled = true;
      resendBtn.style.color = '#bbb';
      resendBtn.style.cursor = 'not-allowed';
      resendBtn.style.fontWeight = '400';
    }

    // Focus first input on load
    window.onload = () => document.getElementById('otp1').focus();
  </script>
</body>
</html>