
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Verify OTP</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f8f8f8;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .container {
      background: #fff;
      padding: 30px;
      border-radius: 10px;
      text-align: center;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      width: 500px;
    }

    .otp-inputs input {
      width: 50px;
      height: 50px;
      margin: 5px;
      font-size: 20px;
      text-align: center;
    }

    button {
      margin-top: 15px;
      padding: 10px 20px;
      background: #ff4d6d;
      border: none;
      color: white;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background: #e60039;
    }

    .error {
      color: red;
      margin-top: 10px;
    }

    .success {
      color: green;
      margin-top: 10px;
    }
  </style>
</head>
<body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="container">
  <h2>Enter OTP</h2>
  <p>Check your email for the OTP</p>

  <div class="otp-inputs">
    <input type="text" maxlength="1" id="otp1" oninput="moveNext(this,'otp2')" />
    <input type="text" maxlength="1" id="otp2" oninput="moveNext(this,'otp3')" />
    <input type="text" maxlength="1" id="otp3" oninput="moveNext(this,'otp4')" />
     <input type="text" maxlength="1" id="otp4" oninput="moveNext(this,'otp5')" />
      <input type="text" maxlength="1" id="otp5" oninput="moveNext(this,'otp6')" />
    <input type="text" maxlength="1" id="otp6" />
  </div>

  <button onclick="confirmOTP()">Verify</button>
  <!-- <button onclick="confirmOTP">Resend OTP</button> -->

  <p id="timer"></p>
<button id="resendBtn" onclick="resendOTP()" disabled>Resend OTP</button>

  <div id="message"></div>
</div>

 <script src="/js/otpTimer.js"></script>

<script>
function moveNext(current, nextId) {
  if (current.value.length === 1) {
    document.getElementById(nextId).focus();
  }
}

async function confirmOTP() {

  const otp = ['otp1','otp2','otp3','otp4','otp5','otp6']
    .map(id => document.getElementById(id).value)
    .join('');

  const messageDiv = document.getElementById("message");
  messageDiv.innerHTML = "";

  if (otp.length < 6) {
    messageDiv.innerHTML = "<p class='error'>Please enter complete OTP</p>";
    return;
  }

  try {

    const response = await fetch("/verifyOtp", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      credentials: "include",   // üî• VERY IMPORTANT for session
      body: JSON.stringify({ otp })
    });

    const result = await response.json();

    if (result.success) {

      await Swal.fire({
        icon: "success",
        title: "OTP Verified üéâ",
        text: "Your account has been created successfully!",
        confirmButtonColor: "#3085d6"
      });

      // üî• Redirect to login page
      window.location.href = "/login";

    } else {

      Swal.fire({
        icon: "error",
        title: "Verification Failed ‚ùå",
        text: result.message || "Invalid OTP",
        confirmButtonColor: "#d33"
      });

    }

  } catch (error) {
    console.log(error);

    Swal.fire({
      icon: "error",
      title: "Server Error ‚ö†Ô∏è",
      text: "Something went wrong. Please try again."
    });
  }
}



  async function resendOTP () {

  const resendBtn = document.getElementById('resendBtn');

  try {
    resendBtn.disabled = true;

    const response = await fetch('/resendOtp',{
      method : 'POST',
      headers :{
        "Content-Type" :"application/json" 
      },
      credentials :'include'
    })

    const result = await response.json();

    if(result.success) {

      Swal.fire({
        icon:"success",
        title :"OTP sent üì©",
        text:'A new OTP has been sent to your email'
      });

      // üî• Restart reusable timer
      startOtpTimer("timer", "resendBtn", 60);

    } else {

      resendBtn.disabled = false;

      Swal.fire({
        icon:'error',
        title:'Error ‚ùå',
        text :result.message || "unable to resend OTP "
      })
    }

  } catch (error) {

    resendBtn.disabled = false;

    Swal.fire({
      icon:'error',
      title:'Server Error ‚ö†Ô∏è',
      text :'Something went wrong. Please try again'
    })
  }
}

// Start timer when page loads
document.addEventListener("DOMContentLoaded", function () {
  startOtpTimer("timer", "resendBtn", 60);
});

</script>


</body>
</html>