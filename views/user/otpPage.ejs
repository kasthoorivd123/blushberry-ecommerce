
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Verify OTP</title>
  <style>
    body {
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #ffe5ec, #f8f8f8);
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
}

/* Main Card Layout */
.wrapper {
  display: flex;
  width: 850px;
  background: #fff;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(0,0,0,0.1);
}

/* Left Image Section */
.image-section {
  width: 50%;
  background: #ff4d6d;
  display: flex;
  justify-content: center;
  align-items: center;
}

.image-section img {
  width: 80%;
}

/* Right Content Section */
.container {
  width: 50%;
  padding: 40px;
  text-align: center;
}

h2 {
  margin-bottom: 10px;
  font-weight: 600;
}

p {
  color: #666;
  font-size: 14px;
}

/* OTP Boxes */
.otp-inputs {
  display: flex;
  justify-content: center;
  margin: 25px 0;
}

.otp-inputs input {
  width: 55px;
  height: 60px;
  margin: 8px;
  font-size: 22px;
  font-weight: bold;
  text-align: center;
  border-radius: 12px;
  border: 2px solid #eee;
  background: #fafafa;
  transition: 0.3s;
}

.otp-inputs input:focus {
  border-color: #ff4d6d;
  background: #fff;
  box-shadow: 0 0 10px rgba(255,77,109,0.3);
  outline: none;
  transform: translateY(-3px);
}

/* Verify Button */
button {
  margin-top: 15px;
  padding: 12px 25px;
  background: #ff4d6d;
  border: none;
  color: white;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
  transition: 0.3s;
}

button:hover {
  background: #e60039;
  transform: translateY(-2px);
}

.error {
  color: red;
  margin-top: 10px;
}

.success {
  color: green;
  margin-top: 10px;
}

/* Resend Button */
#resendBtn {
  padding: 10px 20px;
  border-radius: 6px;
  border: none;
  font-weight: 600;
  background-color: #cccccc;
  color: #666;
  cursor: not-allowed;
  transition: 0.3s;
}

#resendBtn.enabled {
  background-color: #ff4d6d;
  color: white;
  cursor: pointer;
}

#resendBtn.enabled:hover {
  background-color: #e60039;
}
  </style>
</head>
<body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class = 'wrapper'>
  <div class="image-section">
    <img src="https://cdn-icons-png.flaticon.com/512/295/295128.png" alt="OTP Verification">
  </div>

<div class="container">
  <h2>Enter OTP</h2>
  <p>Check your email for the OTP</p>

  <div class="otp-inputs">
    <input type="text" maxlength="1" id="otp1" oninput="moveNext(this,'otp2')" />
    <input type="text" maxlength="1" id="otp2" oninput="moveNext(this,'otp3')" />
    <input type="text" maxlength="1" id="otp3" oninput="moveNext(this,'otp4')" />
     <input type="text" maxlength="1" id="otp4" oninput="moveNext(this,'otp5')" />
      <input type="text" maxlength="1" id="otp5" oninput="moveNext(this,'otp6')" />
    <input type="text" maxlength="1" id="otp6" />
  </div>

  <button onclick="confirmOTP()">Verify</button>
  <!-- <button onclick="confirmOTP">Resend OTP</button> -->

  <p id="timer"></p>
<button id="resendBtn"   onclick="resendOTP()" disabled>Resend OTP</button>

  <div id="message"></div>
</div>
</div>
 <script src="/js/otpTimer.js"></script>

<script>
function moveNext(current, nextId) {
  if (current.value.length === 1) {
    document.getElementById(nextId).focus();
  }
}

async function confirmOTP() {

  const otp = ['otp1','otp2','otp3','otp4','otp5','otp6']
    .map(id => document.getElementById(id).value)
    .join('');

  const messageDiv = document.getElementById("message");
  messageDiv.innerHTML = "";

  if (otp.length < 6) {
    messageDiv.innerHTML = "<p class='error'>Please enter complete OTP</p>";
    return;
  }

  try {

    const response = await fetch("/verifyOtp", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      credentials: "include",   // üî• VERY IMPORTANT for session
      body: JSON.stringify({ otp })
    });

    const result = await response.json();

    if (result.success) {

      await Swal.fire({
        icon: "success",
        title: "OTP Verified üéâ",
        text: "Your account has been created successfully!",
        confirmButtonColor: "#3085d6"
      });

      // üî• Redirect to login page
      window.location.href = "/login";

    } else {

      Swal.fire({
        icon: "error",
        title: "Verification Failed ‚ùå",
        text: result.message || "Invalid OTP",
        confirmButtonColor: "#d33"
      });

    }

  } catch (error) {
    console.log(error);

    Swal.fire({
      icon: "error",
      title: "Server Error ‚ö†Ô∏è",
      text: "Something went wrong. Please try again."
    });
  }
}



  async function resendOTP () {

  const resendBtn = document.getElementById('resendBtn');

  try {
    resendBtn.disabled = true;

    const response = await fetch('/resendOtp',{
      method : 'POST',
      headers :{
        "Content-Type" :"application/json" 
      },
      credentials :'include'
    })

    const result = await response.json();

    if(result.success) {

      Swal.fire({
        icon:"success",
        title :"OTP sent üì©",
        text:'A new OTP has been sent to your email'
      });

      //  Restart reusable timer
      startOtpTimer("timer", "resendBtn", 60);

    } else {

      resendBtn.disabled = false;

      Swal.fire({
        icon:'error',
        title:'Error ‚ùå',
        text :result.message || "unable to resend OTP "
      })
    }

  } catch (error) {

    resendBtn.disabled = false;

    Swal.fire({
      icon:'error',
      title:'Server Error ‚ö†Ô∏è',
      text :'Something went wrong. Please try again'
    })
  }
}

// Start timer when page loads
document.addEventListener("DOMContentLoaded", function () {
  startOtpTimer("timer", "resendBtn", 60);
});

</script>


</body>
</html>